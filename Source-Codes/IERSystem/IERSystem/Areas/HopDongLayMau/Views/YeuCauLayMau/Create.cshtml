</script>


<script>
    $(document).ready(function () {

        const $Global = [];

        $('#themMauModal').on('hidden.bs.modal', function () {
            $(this).find("input,textarea,select").val('').end();

        });

        function Delete() {
            var par = $(this).parent().parent(); //tr
            par.remove();
        }

        function OnRowIn() {
            var deleteCell = $(this).children().last();
            deleteCell.html("<a id='deleteRowBtn' href='#'><span class='glyphicon glyphicon-remove'></span></a>");
            $('#deleteRowBtn').bind("click", Delete);
        }

        function OnRowOut() {
            $(this).children().last().html('');
        }

        $("#saveMauBtn").bind("click", function () {
            var tabledata = $("#sampledata-table tbody");
            var soluong = $("#so-luong").val();
            var donvi = $("#don-vi").val();
            var chitieuyeucaus = $(".select2-selection__choice").toArray().map(function (e) { return e.innerText.substr(1); });
            $Global.push({
                SoLuong: soluong,
                DonVi: donvi,
                ChiTieuYeuCaus: chitieuyeucaus  
            });

            tabledata.append(
                "<tr>" +
                //"<td></td>" +
                "<td>" + $("#ma-mau").val() + "</td>" +
                "<td>" + $("#kh-mau").val() + "</td>" +
                "<td>" + $("#vitri-laymau").val() + "</td>" +
                "<td>" + soluong + " " +  donvi + "</td>" +
                "<td>" + $("#mota-mau").val() + "</td>" +
                "<td>" + chitieuyeucaus.join(", ") + "</td>" +
                "<td></td>" +
                "</tr>");

            //On Row Hover
            tabledata.children().last().hover(OnRowIn, OnRowOut);
        });

        $("#submitBtn").bind("click", function () {

            $.listen('parsley:field:validate', function () {
                validateFront();
            });
            $('#submitBtn').on('click', function () {
                $('#demo-form2').parsley().validate();
                validateFront();
            });
            var validateFront = function () {
                if (true === $('#demo-form2').parsley().isValid()) {
                    $('.bs-callout-info').removeClass('hidden');
                    $('.bs-callout-warning').addClass('hidden');
                } else {
                    $('.bs-callout-info').addClass('hidden');
                    $('.bs-callout-warning').removeClass('hidden');
                }
            };

            function getFormData() {
                var res = {
                    TenKhachHang: $("#TenKhachHang").val(),
                    MaSoThue: $("#MaSoThue").val(),
                    TenDaiDien: $("#TenDaiDien").val(),
                    SoDienThoai: $("#SoDienThoai").val(),
                    SoFax: $("#SoFax").val(),
                    DiaChiLayMau: $("#DiaChiLayMau").val(),
                    DiaChiKhachHang: $("#DiaChiKhachHang").val(),
                    NgayLayMau: $("#NgayLayMau").val(),
                    NgayHenTraKQ: $("#NgayHenTraKQ").val().split(" ")[0],
                    PhuongPhapLayMau: $("#PhuongPhapLayMau").val(),
                    TenTieuChuanDoiChieu: $("#TenTieuChuanDoiChieu").val(),
                    PhiThiNghiemTamTinh: $("#PhiThiNghiemTamTinh").val(),
                    TienKhachHangTraTruoc: $("#TienKhachHangTraTruoc").val()
                };
                var sampledata = $("#sampledata-table tbody tr").map(function (i, elem) {
                    var rowdata = $(elem).find("td").map(function () { return $(this).text(); }).get();
                    //alert(rowdata);
                    return {
                        MaMauKH: rowdata[0],
                        //nthoang: Get the first token of the string splitted by ':' character of Kí Hiệu Mẫu
                        KiHieuMau: rowdata[1].split(":")[0],
                        ViTriLayMau: rowdata[2],
                        SoLuong:  $Global[i].SoLuong,
                        DonVi:  $Global[i].DonVi,
                        MoTaMau: rowdata[4],
                        ChiTieuPhanTiches: $Global[i].ChiTieuYeuCaus
                    }
                }).get();
                res.MauLayHienTruongs = sampledata;
                console.log(res);
                return res;
            }
            var formData = getFormData();
            $.ajax({
                type: 'POST',
                url: ' @Url.Action("Create", "API")',
                data: JSON.stringify(formData),
                success: function (res) {
                   if (res.isOk) {
                      console.log(formData);
                   } else {
                      console.log(res.errMsg);
                   }
                   location.href = '@Url.Action("Index", "YeuCauLayMau")'
                },
                dataType: 'json',
                contentType: 'application/json; charset=utf-8'
            });
        });
    });
    try {
        hljs.initHighlightingOnLoad();
    } catch (err) { }
</script>


