@model IERSystem.Areas.QuanLySoChuyenMau.Models.SoChuyenMauInputModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Tạo sổ chuyển mẫu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Tạo sổ nhận mới</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                                Năm
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                @Html.TextBoxFor(model => model.Nam, new { @class = "form-control col-md-4 col-xs-12" })
                                @Html.ValidationMessageFor(model => model.Nam)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                                Từ tháng
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                @Html.TextBoxFor(model => model.TuThang, new { @class = "form-control col-md-4 col-xs-12" })
                                @Html.ValidationMessageFor(model => model.TuThang)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                                Đến tháng
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                @Html.TextBoxFor(model => model.DenThang, new { @class = "form-control col-md-4 col-xs-12" })
                                @Html.ValidationMessageFor(model => model.DenThang)
                            </div>
                        </div>
                    </form>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input id="submitBtn" value="Tạo" class="btn btn-success" />
                            <input type="button" class="btn btn-danger" value="Quay lại" onclick="location.href='@Url.Action("Index", "CacSoNhanMau")'" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    $("#submitBtn").bind("click", function () {
        formData = {
            Nam: $("#Nam").val(),
            TuThang: $("#TuThang").val(),
            DenThang: $("#DenThang").val()
        };
        $.ajax({
            type: 'POST',
            url: ' @Url.Action("Create", "API")',
            data: JSON.stringify(formData),
            success: function (res) {
                if (res.IsOK) {
                    location.href = '@Url.Action("Index", "CacSoChuyenMau")';
                } else {
                    alert("Có Lỗi Khi Tạo Sổ Chuyển Mẫu");
                }
            },
            dataType: 'json',
            contentType: 'application/json; charset=utf-8'
        });
    });
</script>


