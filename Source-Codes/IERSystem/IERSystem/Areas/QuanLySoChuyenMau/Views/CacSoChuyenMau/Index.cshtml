@model IEnumerable<IERSystem.Areas.QuanLySoChuyenMau.Models.CacSoChuyenMauOutputModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
@{
    int role = (int)Session["role"];
}
<h2>MỤC LỤC</h2>
@if (role == 2 || role==4)
{
<input type="button" class="btn btn-info" value="Tạo sổ chuyển mẫu mới" onclick="location.href='@Url.Action("Create", "CacSoChuyenMau")'" disabled />

}
else
{
<input type="button" class="btn btn-info" value="Tạo sổ chuyển mẫu mới" onclick="location.href='@Url.Action("Create", "CacSoChuyenMau")'" />
}

<div>
    <div class="page-title">
        <div class="title-left">
            <h3>Sổ chuyển mẫu</h3>
        </div>
        <div class="title-right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
   


    <!--Notification-->
    <div class="alert alert-success alert-dismissible fade in" role="alert" id="myNoti">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <strong>
            Chào
            @{
                if (Session["loggedUser"] != null)
                {
                    @Session["loggedUser"].ToString()
                }
            }!
        </strong> Bạn có 5 mẫu mới có thể chuyển vào sổ.
        <a href="#" onclick="$('#danhsachmaumoi').fadeIn(500)"><u>Xem</u></a>
    </div>
    <!--End of Notification-->
    <!--Noti table-->
    <div class="x_panel" id="danhsachmaumoi" style="display:none">
        <div class="x_title">
            <h2>MẪU MỚI</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </li>
                <li>
                    <a onclick="$('#danhsachmaumoi').hide()">
                        <i class="fa fa-close"></i>
                    </a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="column-title">Mã đơn </th>
                            <th class="column-title">Tên khách hàng </th>
                            <th class="column-title">Mã mẫu </th>
                            <th class="column-title">Mô tả mẫu </th>
                            <th class="column-title">Ngày tạo hợp đồng </th>
                            <th class="column-title">Ngày trả mẫu </th>
                        </tr>
                    </thead>

                    <tbody></tbody>

                </table>
            </div>
        </div>
    </div>
    <!--Noti table-->
   
        <!-- danh sach so -->
        <div class="x_panel">
            <div class="x_title">
                <h2>DANH SÁCH SỔ CHUYỂN MẪU</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </li>
                    <li>
                        <a class="close-link">
                            <i class="fa fa-close"></i>
                        </a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="table-responsive">
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Năm</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>quyển số 1 (1/1/2017-31/3/2017)</td>
                                <td>2017</td>
                                <td>
                                    <button>Mở</button>
                                    <button data-toggle="modal" data-target="#xoaModal"><span class="fa fa-trash"></span></button>
                                </td>
                            </tr>
                            <tr>
                                <td>quyển số 2 (1/1/2017-31/3/2017)</td>
                                <td>2017</td>
                                <td>
                                    <button>Mở</button>
                                    <button data-toggle="modal" data-target="#xoaModal"><span class="fa fa-trash"></span></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- danh sach so -->
        <!--Table dynamic-->
        @foreach (var cacsochuyenmau in Model)
        {
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">

                        <h2>SỔ CHUYỂN MẪU - Quyển số @cacsochuyenmau.QuyenSo (@cacsochuyenmau.TuNgay - @cacsochuyenmau.DenNgay)<small><i class="green">5 </i>mẫu mới </small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </li>
                            <li data-toggle="tooltip" title="Thêm mẫu">
                                <a data-toggle="modal" data-target="#themMauModal" class="btnThemMau" role="button" aria-expanded="false">
                                    <div class="data-sochuyenmau-tungay" style="display: none;">
                                        @Html.DisplayFor(modelItem => cacsochuyenmau.TuNgay)
                                    </div>
                                    <div class="data-sochuyenmau-denngay" style="display: none;">
                                        @Html.DisplayFor(modelItem => cacsochuyenmau.DenNgay)
                                    </div>
                                    <div class="data-sochuyenmau-id" style="display: none;">
                                        @Html.DisplayFor(modelItem => cacsochuyenmau.Id)
                                    </div>
                                    <i class="fa fa-plus"></i>
                                </a>
                            </li>
                            <li data-toggle="tooltip" title="In">
                                <a onclick="location.href='@Url.Action("", "")'">
                                    <i class="fa fa-print"></i>
                                </a>
                            </li>
                            <li data-toggle="tooltip" title="Đóng">
                                <a class="close-link"@*data-toggle="modal" data-target="#xoaModal"*@>
                                    <i class="fa fa-close"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="" class="datatable-buttons table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã khách hàng</th>
                                    <th>Mã mẫu</th>
                                    <th>Chỉ tiêu thử nghiệm</th>
                                    <th>Người giao mẫu</th>
                                    <th>Người nhận mẫu</th>
                                    <th>Ngày giao mẫu</th>
                                    <th>Ngày trả kết quả</th>
                                    <th>Điền tên</th>
                                    <th>Ghi chú</th>
                                    <th>Ngày thêm vào sổ</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var sochuyenmau in cacsochuyenmau.NoiDung)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => sochuyenmau.MaKhachHang)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sochuyenmau.MaMau)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sochuyenmau.ChiTieuThuNghiem)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sochuyenmau.NguoiGiaoMau)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sochuyenmau.NguoiNhanMau)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sochuyenmau.NgayGiao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sochuyenmau.NgayTraKQ)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sochuyenmau.DienTen)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => sochuyenmau.GhiChu)
                                        </td>
                                        <td>
                                            Hôm nay
                                        </td>
                                        <td>
                                            <button data-toggle="tooltip" title="Chỉnh sửa" onclick="location.href='@Url.Action("Edit", "SoChuyenMau", new { id = sochuyenmau.Id })'"><span class="fa fa-edit"></span></button>
                                            <button data-toggle="tooltip" title="Xem chi tiết" onclick="location.href='@Url.Action("Details", "SoChuyenMau", new { id = sochuyenmau.Id })'"><span class="fa fa-info"></span></button>
                                            <button data-toggle="tooltip" title="Trả về" onclick="returnItem()"><span class="fa fa-reply"></span></button>
                                            <button data-toggle="modal" data-target="#xoaModal"><span class="fa fa-trash"></span></button>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    
</div>

<!-- Modal -->
<div id="xoaModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">
                <h4>Bạn có chắc chắn muốn xóa mẫu này?</h4>
                <h5>Bạn sẽ không để hoàn tác hành động này.</h5>
                <div class="form-group" align="center">
                    <button type="button" class="btn btn-success" data-dismiss="modal" onclick="delSucNoti()"><span class="fa fa-check"></span></button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="delFailNoti()"><span class="fa fa-close"></span></button>
                </div>
            </div>
        </div>
    </div>
</div>

    <!-- Modal -->
<div id="themMauModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm mẫu</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="mauThemTable" class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th>
                                    <input type="checkbox" id="check-all" class="flat">
                                </th>
                                <th class="column-title">Phiếu yêu cầu </th>
                                <th class="column-title">Tên/Địa chỉ KH </th>
                                <th class="column-title">Mã số </th>
                                <th class="column-title">Ngày nhận mẫu </th>
                                <th class="column-title">Ngày trả mẫu </th>
                                <th class="column-title">Mô tả mẫu </th>
                                <th class="bulk-actions" colspan="6">
                                    <a class="antoo" style="color:#fff; font-weight:500;">Chọn nhiều ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                </th>
                            </tr>
                        </thead>

                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button id="addMauBtn" type="button" class="btn btn-success" data-dismiss="modal" onclick="addItem()">Thêm Mẫu</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="addItemFail()">Đóng</button>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
        $(function () {
            $('#myNoti').hide().fadeIn(1000);
        })
        function delSucNoti() {
            new PNotify({
                title: 'Thành công',
                text: 'xóa mẫu thành công khỏi dữ liệu.',
                type: 'success',
                styling: 'bootstrap3'
            })
        }
        function delFailNoti() {
            new PNotify({
                title: 'Hủy',
                text: 'mẫu không được xóa khỏi dữ liệu.',
                styling: 'bootstrap3'
            });
        }
        function addItem() {
            new PNotify({
                title: 'Thành công',
                text: 'thêm mẫu thành công vào dữ liệu.',
                type: 'success',
                styling: 'bootstrap3'
            })
        }
        function addItemFail() {
            new PNotify({
                title: 'Hủy',
                text: 'mẫu không được thêm vào dữ liệu.',
                styling: 'bootstrap3'
            })
        }
        function returnItem() {
            new PNotify({
                title: 'Thông báo',
                text: 'mẫu đã được hoàn trả.',
                type: 'info',
                styling: 'bootstrap3'
            });
        }
    </script>

    <script>
        $(document).ready(function () {
            var candidstable = $("#mauThemTable tbody");
            var candid_idarr = [];
            var target_cacsochuyenmau = undefined;

            $("#addMauBtn").bind("click", function () {
                var maupt_ids = []
                $("#mauThemTable tbody").find("tr td input[type=checkbox]").each(function (ind, e) {
                    maupt_ids.push({ Checked: e.checked, Index: ind });
                });
                var formData1 = {
                    MauPhanTichIDs: maupt_ids
                                    .filter(function (item) { return item.Checked; })
                                    .map(function (item) { return candid_idarr[item.Index]; }),
                    CacSoChuyenMauID: target_cacsochuyenmau,
                };
                $.ajax({
                    type: 'POST',
                    url: ' @Url.Action("ReceiveMauPTs", "API")',
                    data: JSON.stringify(formData1),
                    success: function (res) {
                        if (res.isOk) {
                            console.log(formData);
                        } else {
                            console.log(res.errMsg);
                        }
                        window.location.reload(true);
                    },
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8'
                });
            });

            $(".btnThemMau").bind("click", function () {
                target_cacsochuyenmau = $(this).find(".data-sochuyenmau-id")[0].innerText.trim();

                //Prepare the data to populate mauThemTable
                var formData = {
                    TuNgay: $(this).find(".data-sochuyenmau-tungay")[0].innerText.trim(),
                    DenNgay: $(this).find(".data-sochuyenmau-denngay")[0].innerText.trim()
                };

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetMauPTCandids", "API")',
                    data: JSON.stringify(formData),
                    success: function (res) {
                        candidstable.empty();
                        candid_idarr = [];
                        res.forEach(function (item, index) {
                            candid_idarr[index] = item.Id;
                            candidstable.append(
                                "<tr>" +
                                    //"<td class='a-center'>" +
                                    //    "<input class='flat' name='table_records' style='opacity: 0;' type='checkbox'>" +
                                    //    "<div class='icheckbox_flat-green' style='position: relative;'><input class='flat' name='table_records' style='opacity: 0;' type='checkbox'><ins class='iCheck-helper' style='position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255) none repeat scroll 0% 0%; border: 0px none; opacity: 0;'></ins></div>" +
                                    //"</td>" +
                                    "<td class='a-center '>" +
                                        "<input type='checkbox' class='flat' name='table_records'>" +
                                    "</td>" +
                                    "<td>" + item.MaDon + "</td>" +
                                    "<td>" + item.TenDiaChiKhachHang + "</td>" +
                                    "<td>" + item.MaMau + "</td>" +
                                    "<td>" + item.NgayNhanMau + "</td>" +
                                    "<td>" + item.NgayTraMau + "</td>" +
                                    "<td>" + item.MoTaMau + "</td>" +
                                "</tr>"
                            );
                        });
                    },
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8'
                });
            });
        });
    </script>

}


