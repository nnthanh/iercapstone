                                    <button data-toggle="tooltip" title="Xem chi tiết" onclick="location.href='@Url.Action("Details", "SoNhanMau", new { id = sonhanmau.Id })'"><span class="fa fa-info"></span></button>
                                    <button data-toggle="tooltip" title="Xóa" onclick="location.href='@Url.Action("Delete", "SoNhanMau", new { id = sonhanmau.Id })'"><span class="fa fa-trash"></span></button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    <script>
        $(document).ready(function () {
            var candidstable = $("#mauThemTable tbody");
            var candid_idarr = [];
            var target_cacsonhanmau = undefined;

            $("#addMauBtn").bind("click", function () {
                var maupt_ids = []
                $("#mauThemTable tbody").find("tr td input[type=checkbox]").each(function (ind, e) {
                    maupt_ids.push({ Checked: e.checked, Index: ind });
                });
                var formData1 = {
                    MauPhanTichIDs: maupt_ids
                                    .filter(function (item) { return item.Checked; })
                                    .map(function (item) { return candid_idarr[item.Index]; }),
                    CacSoNhanMauID: target_cacsonhanmau,
                };
                $.ajax({
                    type: 'POST',
                    url: ' @Url.Action("ReceiveMauPTs", "API")',
                    data: JSON.stringify(formData1),
                    success: function (res) {
                        if (res.isOk) {
                            console.log(formData);
                        } else {
                            console.log(res.errMsg);
                        }
                        window.location.reload(true);
                    },
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8'
                });
            });

            $(".btnThemMau").bind("click", function () {
                target_cacsonhanmau = $(this).find(".data-sonhanmau-id")[0].innerText.trim();

                //Prepare the data to populate mauThemTable
                var formData = {
                    TuNgay: $(this).find(".data-sonhanmau-tungay")[0].innerText.trim(),
                    DenNgay: $(this).find(".data-sonhanmau-denngay")[0].innerText.trim()
                };

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetMauPTCandids", "API")',
                    data: JSON.stringify(formData),
                    success: function (res) {
                        candidstable.empty();
                        candid_idarr = [];
                        res.forEach(function (item, index) {
                            candid_idarr[index] = item.Id;
                            candidstable.append(
                                "<tr>" +
                                    //"<td class='a-center'>" +
                                    //    "<input class='flat' name='table_records' style='opacity: 0;' type='checkbox'>" +
                                    //    "<div class='icheckbox_flat-green' style='position: relative;'><input class='flat' name='table_records' style='opacity: 0;' type='checkbox'><ins class='iCheck-helper' style='position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255) none repeat scroll 0% 0%; border: 0px none; opacity: 0;'></ins></div>" +
                                    //"</td>" +
                                    "<td class='a-center '>" +
                                        "<input type='checkbox' class='flat' name='table_records'>" +
                                    "</td>" +
                                    "<td>" + item.MaDon + "</td>" +
                                    "<td>" + item.TenKhachHang + "</td>" +
                                    "<td>" + item.MaMau + "</td>" +
                                    "<td>" + item.MoTaMau + "</td>" +
                                    "<td>" + item.NgayTaoHD + "</td>" +
                                    "<td>" + item.NgayTraMau + "</td>" +
                                    "<td class='last'>" +
                                        "<a href='#'>Xem</a>" +
                                    "</td>" +
                                "</tr>"
                            );
                        });
                    },
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8'
                });
            });
        });
    </script>
}
