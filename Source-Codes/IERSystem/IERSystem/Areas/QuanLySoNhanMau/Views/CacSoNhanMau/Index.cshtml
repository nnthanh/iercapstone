                                    @Html.DisplayFor(modelItem => cacsonhanmau.TuNgay)
                                </div>
                                <div class="data-sonhanmau-denngay" style="display: none;">
                                    @Html.DisplayFor(modelItem => cacsonhanmau.DenNgay)
