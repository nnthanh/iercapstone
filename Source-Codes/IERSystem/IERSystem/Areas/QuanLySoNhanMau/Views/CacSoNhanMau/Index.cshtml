                        <tbody>
                            @foreach (var sonhanmau in cacsonhanmau.NoiDung)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => sonhanmau.MaPhieuYeuCau)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => sonhanmau.TenDiaChiKH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => sonhanmau.MaMau)
                                </td>
                                <td>
                                    N/A
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => sonhanmau.NgayNhan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => sonhanmau.NgayTraKQ)
                                </td>
                                <td>
                                    N/A
                                </td>
                                <td>
                                    <div class="checkbox">
                                        <label class="">
                                            <input type="checkbox" class="flat">
                                        </label>
                                    </div>
                                </td>
                                <td>
