                            <div class="col-md-4 col-sm-4 col-xs-12">
                                @Html.TextBoxFor(model => model.NgayTraMau, new { @class = "date-picker form-control col-md-7 col-xs-12 active", placeholder = "Nhập ngày trả mẫu vào đây", required = "required", type = "text", id = "NgayTraMau" })
                                @Html.ValidationMessageFor(model => model.NgayTraMau)
                            </div>
                        </div>

                        @*<div class="form-group">
