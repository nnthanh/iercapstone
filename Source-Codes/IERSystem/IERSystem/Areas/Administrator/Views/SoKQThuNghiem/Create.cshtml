                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    @Html.TextBoxFor(model => model.DonVi, new { @class = "form-control col-md-4 col-xs-12" })
                                    @Html.ValidationMessageFor(model => model.DonVi)
                                </div>
                            </div>

