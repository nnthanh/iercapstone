@model IEnumerable<IERSystem.Areas.Administrator.Models.SoNhanMau>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>SỔ NHẬN MẪU</h2>

<input type="button" class="btn btn-info" value="Tạo sổ nhận mẫu mới" onclick="location.href='@Url.Action("Create", "CacSoNhanMau")'" />
<input type="button" class="btn btn-success" value="In" onclick="location.href='@Url.Action("Create", "FormKQ")'" />

@{
    ViewBag.Title = "Index";
}

<div class>
    <div class="page-title">
        <div class="title-left">
            <h3>Sổ nhận mẫu</h3>
        </div>
        <div class="title-right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        SỔ NHẬN MẪU - Quý I/2017
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                <i class="fa fa-plus"></i>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="@Url.Action("Create", "SoNhanMau")">Tạo mẫu nhận mới</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link">
                                <i class="fa fa-close"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content" style="display:block;">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th rowspan="4">Phiếu yêu cầu</th>
                                <th rowspan="4">Tên/ Địa chỉ khách hàng</th>
                                <th rowspan="4">Mã số</th>
                                <th rowspan="4">Chỉ tiêu thử nghiệm</th>
                                <th rowspan="4">Ngày nhận</th>
                                <th rowspan="4">Ngày trả kết quả</th>
                                <th rowspan="4">Ký hiệu mẫu</th>
                                <th rowspan="4">KH ký nhận trả tiền</th>
                                <th rowspan="4">KH ký nhận trả kết quả</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhieuYeuCau)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenDiaChiKhachHang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaSo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChiTieuThuNghiem)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayNhan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayTraKetQua)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KyHieuMau)
                                    </td>
                                    <td>
                                        <div class="checkbox">
                                            <label class="">
                                                <div class="icheckbox_flat-green" style="position: relative;"><input type="checkbox" class="flat" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div>
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="checkbox">
                                            <label class="">
                                                <div class="icheckbox_flat-green" style="position: relative;"><input type="checkbox" class="flat" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div>
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
