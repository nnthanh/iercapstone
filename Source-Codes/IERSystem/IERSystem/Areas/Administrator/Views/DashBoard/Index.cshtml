              { month: 'Tháng 10', value: 678 },
              { month: 'Tháng 11', value: 789 },
              { month: 'Tháng 12', value: 1371 }
            ],
            xkey: 'month',
            ykeys: ['value'],
            labels: ['số lượng mẫu'],
            barRatio: 0.4,
            barColors: ['#26B99A', '#34495E', '#ACADAC', '#3498DB'],
            xLabelAngle: 35,
            hideHover: 'auto',
            resize: true
        });

        $MENU_TOGGLE.on('click', function () {
            $(window).resize();
        });
    });
</script>
