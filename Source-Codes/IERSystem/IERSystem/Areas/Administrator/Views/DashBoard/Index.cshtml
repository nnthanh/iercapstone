@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<!-- morris.js -->
<script src="~/Areas/Administrator/vendors/raphael/raphael.min.js"></script>
<script src="~/Areas/Administrator/vendors/morris.js/morris.min.js"></script>
<script>
    $(document).ready(function () {
        Morris.Bar({
            element: 'graph_bar',
            data: [
              { month: 'Tháng 1', value: 380 },
              { month: 'Tháng 2', value: 655 },
              { month: 'Tháng 3', value: 275 },
              { month: 'Tháng 4', value: 1571 },
              { month: 'Tháng 5', value: 655 },
